<%=form_for [:admin, @category] do |f|%>

  <%= content_tag :div, class: "form-group" do -%>
    <% if @category.persisted? %>
      <%= "Category ID: #{@category.id}" %>
    <% else %>
      <p>Category ID: N/A</p>
    <% end %>
  <% end -%>

  <%= content_tag :div, class: "form-group" do -%>
    <%=f.label :name %>
    <%=f.text_field :name %>
  <%= end -%>

  <%= content_tag :div, class: "form-group" do -%>
    <%=f.label :description %>
    <%=f.text_area :description %>
  <%= end -%>

  <%= content_tag :div, class: "form-group" do -%>
    <% if @category.persisted? %>
      <%= f.submit "Create new category", class: 'btn btn-lg btn-success' %>
    <% else %>
      <%= f.submit "Update category", class: 'btn btn-lg btn-success' %>
    <% end %>

  <% end -%>

<% end %>